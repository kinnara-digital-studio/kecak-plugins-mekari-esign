{
  "title": "SignersElement",
  "properties": [
    {
      "name": "id",
      "label": "ID",
      "type": "autocomplete",
      "required": "True",
      "regex_validation": "^[a-zA-Z0-9_]+$",
      "validation_message": "Only alpha-numeric and underscore characters allowed",
      "options_callback": "FormBuilder.getAllFieldOptions"
    },
    {
      "name": "label",
      "label": "Label",
      "type": "textfield",
      "required": "True",
      "value": "My Plugin"
    },
    {
      "name": "signer",
      "label": "Signer",
      "type": "dropdown",
      "required": "True",
      "options_callback": "FormBuilder.getSigners"
    },
    {
      "name": "validator",
      "label": "@@form.textfield.validator@@",
      "type": "elementselect",
      "options_ajax": "[CONTEXT_PATH]/web/property/json/getElements?classname=org.joget.apps.form.model.FormValidator",
      "url": "[CONTEXT_PATH]/web/property/json[APP_PATH]/getPropertyOptions"
    }
  ]
}
